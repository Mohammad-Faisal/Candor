<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layouttop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:gravity="center_horizontal"
	android:keepScreenOn="true"
	tools:context=".game.GameActivity">

	<RelativeLayout
		android:id="@+id/rLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:paddingBottom="0dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="0dp">

		<View
			android:id="@+id/centerRef"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_gravity="center" />

		<ImageView
			android:id="@+id/villianLeft"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="0dp"
			android:src="@drawable/rsz_voltmain" />

		<ImageView
			android:id="@+id/villianCenter"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:src="@drawable/rsz_voltmain" />

		<ImageView
			android:id="@+id/villianRight"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="0dp"
			android:src="@drawable/rsz_voltmain" />

		<ImageView
			android:id="@+id/background"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/w1980250water"
			android:visibility="visible"
			android:layout_alignParentBottom="true"

			/>



		<ImageView
			android:id="@+id/water3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/rightw1edited"
			android:visibility="visible"
			android:layout_alignParentBottom="true"

			/>

		<ImageView
			android:id="@+id/water4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/rightw2"
			android:visibility="gone"
			android:layout_alignParentBottom="true"
			/>

		<ImageView
			android:id="@+id/water5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/rightw3"
			android:visibility="gone"
			android:layout_alignParentBottom="true"
			/>

		<ImageView
			android:id="@+id/water6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:src="@drawable/rightw4"
			android:visibility="gone"
			android:layout_alignParentBottom="true"
			/>


		<ImageView
			android:id="@+id/garbageBrokenLeft"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			android:layout_marginLeft="10dp"
			android:layout_marginBottom="30dp"
			android:src="@drawable/paper200"
			android:visibility="invisible"/>

		<ImageView
			android:id="@+id/garbageBrokenCenter"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="30dp"
			android:src="@drawable/paper200"
			android:visibility="invisible"/>

		<ImageView
			android:id="@+id/garbageBrokenRight"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="30dp"
			android:src="@drawable/paper200"
			android:visibility="invisible"/>




		<RelativeLayout
			android:id="@+id/layout_panel"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true">

			<ImageView
				android:id="@+id/imageView1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:alpha="0.9"
				android:background="@android:drawable/dialog_holo_dark_frame" />

			<TextView
				android:id="@+id/score_view"
				android:layout_width="120dp"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="18dp"
				android:gravity="center"
				android:text="Score: 0"
				android:textColor="#ffffff"
				android:textSize="22dp" />

			<TextView
				android:id="@+id/best_view"
				android:layout_width="120dp"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="18dp"
				android:gravity="center"
				android:text="Best: X"
				android:textColor="#ffffff"
				android:textSize="22dp" />

			<TextView
				android:id="@+id/lives_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="4dp"
				android:text="3"
				android:textColor="#ffffff"
				android:textSize="60dp" />

			<TextView
				android:id="@+id/lives_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_above="@id/lives_view"
				android:layout_centerHorizontal="true"
				android:text="Lives"
				android:textColor="#ffffff"
				android:textSize="10dp" />


		</RelativeLayout>

		<TextView
			android:id="@+id/level_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/layout_panel"
			android:layout_centerHorizontal="true"
			android:text="Level 0"
			android:textColor="#55000000"
			android:textSize="80dp" />

		<TextView
			android:id="@+id/countdown_view"
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:layout_alignParentTop="true"
			android:layout_marginTop="50dp"
			android:gravity="center"
			android:text="3"
			android:textColor="#ffffff"
			android:textSize="300dp" />


		<com.example.candor.candor.game.MyScrollView
			android:id="@+id/hScrollView"
			android:layout_width="match_parent"
			android:layout_height="235dp"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:fadingEdge="none"
			android:overScrollMode="never"
			android:scrollbars="none">

			<LinearLayout
				android:id="@+id/linearLayout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginTop="35dp">

				<ImageView
					android:id="@+id/basketView"
					android:layout_width="500dp"
					android:layout_height="50dp"
					android:src="@drawable/basket" />
				<ImageView
					android:id="@+id/harry"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:src="@drawable/rsz_harryfinal"

					/>

			</LinearLayout>
		</com.example.candor.candor.game.MyScrollView>

		<ImageButton
			android:id="@+id/btn_reset"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_below="@+id/layout_panel"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="0dp"
			android:background="@android:drawable/ic_menu_rotate" />


	</RelativeLayout>

</RelativeLayout>